<div class="row">  
   <div class="col-md-3">
      <h4><%= link_to user_path(@f_report.id) do %><%= attachment_image_tag @f_report, :a_image, :fill, 50, 50, format: 'jpg' %><%= @f_report.user.nickname %><% end %>さんからの投稿</h4><br>
   </div>
   <div class="col-md-7">
   </div>
   <div class="col-md-2">
      <h4><%= @f_report.fishing_spot.fishing_spot_name %></h4><br>
   </div>
</div>
<div class="row">
   <div class="col-md-3 left">
      <h4>釣行日</h4>
      <%= @f_report.fishing_date %><br>
      <h4>釣れた時間</h4>
      <%= @f_report.time %><br>
      <h4>天気</h4>
      <%= @f_report.weather %><br>
      <h4>MAXサイズ</h4>
      <%= @f_report.size %><br>
      <h4>ルアータイプ</h4>
      <%= @f_report.lure_type.type_name %><br>
      <h4>レンジ</h4>
      <%= @f_report.range %><br>
      <h4>リトリーブ</h4>
      <%= @f_report.retrieve %><br>
      <h4>ルアー名</h4>
      <%= @f_report.lure_name %><br>
   </div>
   <div class="col-md-7">
      <div class="show_image_box">
         <!-- <h2>タイトル</h2> -->
         <div  class="aaa">
            <div class="slider-for">
               <div><%= attachment_image_tag @f_report, :a_image, format: 'jpg' %></div>
               <div><%= attachment_image_tag @f_report, :b_image, format: 'jpg' %></div>
               <div><%= attachment_image_tag @f_report, :c_image, format: 'jpg' %></div>
               <div><%= attachment_image_tag @f_report, :d_image, format: 'jpg' %></div>
               <div><%= attachment_image_tag @f_report, :e_image, format: 'jpg' %></div>
            </div>
            <div class="slider-nav">
               <%= attachment_image_tag @f_report, :a_image, :fill, 300, 300, format: 'jpg' %>
               <%= attachment_image_tag @f_report, :b_image, :fill, 300, 300, format: 'jpg' %>
               <%= attachment_image_tag @f_report, :c_image, :fill, 300, 300, format: 'jpg' %>
               <%= attachment_image_tag @f_report, :d_image, :fill, 300, 300, format: 'jpg' %>
               <%= attachment_image_tag @f_report, :e_image, :fill, 300, 300, format: 'jpg' %>
            </div>
         </div>
      </div>
   </div>
   <div class="col-md-2 left">
      <%= attachment_image_tag @f_report.fishing_spot, :fishing_spot_image, :fill, 200, 200, format: "jpg" %><br>
      <%= @f_report.fishing_spot.fishing_spot_body %>
   </div>
</div>
<div class="row">
   <div class="col-md-12">
      <h4>釣果報告</h4>
      <%= @f_report.fishing_body %><br>

      <% if @f_report.favorited_by?(current_user) %>
          <%= link_to fishing_report_favorite_path(@f_report), method: :delete do %>
            <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
            <%= @f_report.favorites.count %> いいね
          <% end %>
      <% else %>
          <%= link_to fishing_report_favorites_path(@f_report), method: :post do %>
            <i class="fa fa-heart-o" aria-hidden="true"></i>
            <%= @f_report.favorites.count %> いいね
          <% end %>
      <% end %>

      <%= form_for [@f_report, @comment] do |f| %>
                  <%= f.text_field :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
          <%= f.submit "送信する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
      <% end %>

      <% @f_report.report_comments.each do |r| %>
        [投稿者]<br>
      <%= r.user.nickname %><br>
      　[投稿日]<br>
      <%= r.created_at.strftime('%Y/%m/%d') %><br>
      [コメント]<br>
      <%= r.comment %><br>
      <%#= link_to item_review_path(r.comment), method: :delete, "data-confirm" => "本当に削除しますか？" do %><button class="">削除</button<!-- > --><br><%# end %>
      <% end %>
   </div>
</div>

<br>
<br>
<br>
<br>
