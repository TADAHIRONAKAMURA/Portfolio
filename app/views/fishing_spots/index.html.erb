<div class="top_background">
	<% if flash[:notice] %>
  		<div class=notice><%= flash[:notice] %></div>
	<% end %>
</div>
<div class="map_bg">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xs-2">

			</div>
			<div class="col-xs-8">
				<div class="map">
					<div><img class="map-image" src="assets/kawaguchi.jpg"></div>
				</div>
			</div>
			<div class="col-xs-2">
				<div class=spot_number_box>
					<table class="spot_number">
					<h4><% @map_spots.reverse_each do |spot| %>
						<tr>
							<td><%= link_to fishing_spot_path(spot.id) do %><%= spot.fishing_spot_name %><% end %></td>
						</tr>
					<% end %></h4>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="second-background">
	<div class="container-fluid">
		<div class="description">
			<div class='row'>
				<div class="col-md-12">
					<table class= "table text_box">
					<h4><% @spots.each do |spot| %>
						<tr>
							<td><%= link_to fishing_spot_path(spot.id) do %><%= attachment_image_tag spot, :fishing_spot_image, :fill, 100, 100, format: "jpg" , fallback: "no_image100x100.jpg" %><% end %></td>
							<td class="col-md-2"><%= link_to fishing_spot_path(spot.id) do %><%= spot.fishing_spot_name %><% end %></td>
							<td class="col-md-8"><%= spot.fishing_spot_body %></td>
						</tr>
					<% end %></h4>
					</table>
					<div class=pagenate_btn>
						<%= paginate @spots, class: "pagenate" %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>






