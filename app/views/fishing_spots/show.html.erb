<div class="show_background">
	<div class="row">
		<div class="col-md-3 col-xs-12 index_box_height">
			<div class=spot_subtitle>
				<h4><%= @spot.fishing_spot_name %></h4>
				<%= attachment_image_tag @spot, :fishing_spot_image, :fill, 200, 200, format: "jpg", fallback: "/images/no_image100x100.jpg" %><br>
				<div class=spot_subtitle_text>
					<h4><%= @spot.fishing_spot_body %></h4>
				</div>
			</div>
		</div>
		<div class="col-md-9 col-xs-12">
			<h4 class="show_contents">釣果報告一覧</h4>
			<div class="show_scroll">
				<table  class="table spot_text">
					<tbody>
					<% @f_reports.each do |f_report| %>
						<tr>
							<td><%= link_to fishing_report_path(f_report.id) do %><%= attachment_image_tag f_report, :a_image, :fill, 50, 50, format: 'jpeg' %><% end %></td>
							<td><%= link_to fishing_report_path(f_report.id) do %>投稿を読む<% end %></td>
							<td>投稿日<br><%= f_report.created_at.strftime('%Y/%m/%d') %></td>
							<td>釣行日<br><%= f_report.fishing_date %></td>
							<td>最大サイズ<br><%= f_report.size %>cm</td>
							<td>投稿者<br><%= link_to user_path(f_report.user.id) do %><%= f_report.user.nickname %><% end %></td>
						</tr>
					<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>