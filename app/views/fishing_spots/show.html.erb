<h1>ポイント詳細ページ</h1>

<div class="row">
	<div class="col-md-3">
		<h4><%= @spot.fishing_spot_name %><br>
		<%= attachment_image_tag @spot, :fishing_spot_image, :fill, 200, 200, format: "jpg" %><br>
		<%= @spot.fishing_spot_body %></h4>
	</div>
	<div class="col-md-9">
		<h1>釣果報告一覧</h1>
		<table  class="table">
			<tbody>
			<% @f_reports.each do |f_report| %>
				<tr>
					<td>投稿日<br><%= f_report.created_at.strftime('%Y/%m/%d') %></td>
					<td><%= link_to fishing_report_path(f_report.id) do %><%= attachment_image_tag f_report, :a_image, :fill, 50, 50, format: 'jpeg' %><% end %></td>
					<!-- <td><%#= link_to fishing_report_path(f_report.id) do %><%#= f_report.fishing_spot.fishing_spot_name %><%# end %></td> -->
					<td><%= link_to fishing_report_path(f_report.id) do %><%= f_report.user.nickname %><% end %></td>
					<td>釣行日<br><%= f_report.fishing_date %></td>
					<td>最大サイズ<br><%= f_report.size %>cm</td>
				</tr>
			<% end %>
			</tbody>
		</table>
	</div>
</div>